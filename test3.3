#include<iostream>
#include<stdio.h>
#include<stack>
#include<string>
#include<stdlib.h>
#include<queue>

using namespace std;

priority_queue<int, vector<int>,greater<int> > q;

int main()
{
    int n;
    int x;
    int t1,t2;
    int ans=0;
    while(scanf("%d",&n)==1)
    {
        for(int i=0;i<n;i++)
        {
            scanf("%d",&x);
            q.push(x);
        }
        while(q.size()>1)
        {
        t1=q.top();
        q.pop();
        t2=q.top();
        q.pop();
        q.push(t1+t2);
        ans=ans+t1+t2;
        }
        printf("%d",ans);
    }

    return 0;
}
